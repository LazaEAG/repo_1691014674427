{% liquid
  assign section_anchor_id = section.settings.section_anchor_id | handleize
  assign color_scheme = section.settings.color_scheme

  assign layout = section.settings.layout
  assign title = section.settings.title
  assign image = section.settings.image

  assign blocks = section.blocks

  assign pt_mob = section.settings.pt_mob
  assign pb_mob = section.settings.pb_mob
  assign pt_tab = section.settings.pt_tab
  assign pb_tab = section.settings.pb_tab
  assign pt_desk = section.settings.pt_desk
  assign pb_desk = section.settings.pb_desk
%}

{% render 'section-paddings',
  section_id: section.id,
  pt_mob: pt_mob,
  pb_mob: pb_mob,
  pt_tab: pt_tab,
  pb_tab: pb_tab,
  pt_desk: pt_desk,
  pb_desk: pb_desk
%}

<div
  id="{{ section_anchor_id }}"
  data-section-id="{{ section.id }}"
  class="color-scheme-{{ color_scheme }} bg-sc-bg-primary bg-primary-gradient"
>
  {% if layout == 'wide' %}
    <div
      class="animate__animated smD:grid smD:grid-cols-2 opacity-0"
      x-intersect="$el.classList.add('animate__fadeIn')"
    >
      {% if image != blank %}
        <div class="mb-7.5 smD:m-0 smD:h-full smD:min-h-[600px] h-[315px] md:mb-10 md:h-[300px] 2xl:min-h-[750px]">
          {{
            image
            | image_url: width: 2000
            | image_tag:
              alt: image.alt,
              class: 'h-full w-full object-cover',
              loading: 'lazy',
              widths: '300, 400, 700, 900, 1200, 1500'
          }}
        </div>
      {% endif %}
      <div class="px-7.5 md:px-15 smD:py-20 4k:px-50 smD:px-20 smD:my-auto">
        {% if title != blank %}
          <h2 class="text-sc-title font-primary smD:mb-12.5 smD:text-4xl 2k:text-6xl mb-5 text-4xl font-medium md:text-5xl 2xl:mb-10 2xl:text-5xl">
            {{- title -}}
          </h2>
        {% endif %}

        {% if blocks.size > 0 %}
          <div class="space-y-5">
            {% for block in blocks %}
              {% assign question = block.settings.question %}
              {% assign answer = block.settings.answer %}

              {% render 'faq-block', question: question, answer: answer, index: forloop.index %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  {% elsif layout == 'container' %}
    <div
      class="animate__animated smD:flex smD:space-x-15 container opacity-0"
      x-intersect="$el.classList.add('animate__fadeIn')"
    >
      {% if image != blank %}
        <div class="mb-7.5 smD:m-0 smD:h-auto smD:max-w-[400px] 2k:max-w-[600px] 4k:max-w-4xl h-[315px] md:mb-5 md:h-[300px] 2xl:max-w-[500px]">
          {{
            image
            | image_url: width: 2000
            | image_tag:
              alt: image.alt,
              class: 'h-full w-full object-cover smD:min-h-[450px]',
              loading: 'lazy',
              widths: '300, 400, 700, 900, 1200, 1500'
          }}
        </div>
      {% endif %}
      <div class="smD:my-auto 4k:px-50 w-full">
        {% if title != blank %}
          <h2 class="text-sc-title font-primary smD:mb-12.5 smD:text-4xl 2k:text-6xl mb-5 text-4xl font-medium md:text-5xl 2xl:mb-10 2xl:text-5xl">
            {{- title -}}
          </h2>
        {% endif %}

        {% if blocks.size > 0 %}
          <div class="space-y-5">
            {% for block in blocks %}
              {% assign question = block.settings.question %}
              {% assign answer = block.settings.answer %}

              {% render 'faq-block', question: question, answer: answer, index: forloop.index %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "FAQ image",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "section_anchor_id",
      "label": "Section anchor id",
      "default": "FAQ image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout type",
      "options": [
        {
          "value": "wide",
          "label": "Wide"
        },
        {
          "value": "container",
          "label": "Container"
        }
      ],
      "default": "container"
    },
    {
      "type": "header",
      "content": "Content settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Frequently asked questions"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section image"
    },
    {
      "type": "header",
      "content": "Padding Y settings"
    },
    {
      "type": "number",
      "id": "pt_mob",
      "label": "Mobile padding top in px",
      "default": 0
    },
    {
      "type": "number",
      "id": "pb_mob",
      "label": "Mobile padding bottom in px",
      "default": 0
    },
    {
      "type": "number",
      "id": "pt_tab",
      "label": "Tablet padding top in px",
      "default": 0
    },
    {
      "type": "number",
      "id": "pb_tab",
      "label": "Tablet padding bottom in px",
      "default": 0
    },
    {
      "type": "number",
      "id": "pt_desk",
      "label": "Desktop padding top in px",
      "default": 0
    },
    {
      "type": "number",
      "id": "pb_desk",
      "label": "Desktop padding bottom in px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ block",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Block question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Block answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ image",
      "category": "Repeatable",
      "blocks": [
        {
          "type": "faq",
          "settings": {
            "question": "How do I create an account?",
            "answer": "<p>To create an account, simply click on the 'Sign Up' button on our website's homepage. Follow the prompts to provide the required information, such as your name, email address, and password.</p>"
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "What is your return/exchange policy?"
          }
        }
      ]
    }
  ]
}
{% endschema %}
