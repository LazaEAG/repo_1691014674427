{% liquid
  assign section_anchor_id = section.settings.section_anchor_id | handleize
  assign color_scheme = section.settings.color_scheme

  assign image = section.settings.image
  assign image_tab = section.settings.image_tab | default: image
  assign image_mob = section.settings.image_mob | default: image_tab
  assign image_size = section.settings.image_size
  case image_size
    when 'small'
      assign img_size = 'min-h-[350px] md:min-h-[550px]'
    when 'medium'
      assign img_size = 'min-h-[432px] md:min-h-[600px]'
    when 'large'
      assign img_size = 'min-h-[500px] md:min-h-[650px]'
  endcase

  assign title = section.settings.title
  assign text = section.settings.text
  assign button_type = section.settings.button_type

  assign pt_mob = section.settings.pt_mob
  assign pb_mob = section.settings.pb_mob
  assign pt_tab = section.settings.pt_tab
  assign pb_tab = section.settings.pb_tab
  assign pt_desk = section.settings.pt_desk
  assign pb_desk = section.settings.pb_desk
%}

{% render 'section-paddings',
  section_id: section.id,
  pt_mob: pt_mob,
  pb_mob: pb_mob,
  pt_tab: pt_tab,
  pb_tab: pb_tab,
  pt_desk: pt_desk,
  pb_desk: pb_desk
%}

<div
  id="{{ section_anchor_id }}"
  data-section-id="{{ section.id }}"
  class="color-scheme-{{ color_scheme }} bg-sc-bg-primary bg-primary-gradient"
>
  <div class="gap-7.5 smD:grid-cols-2 4k:max-w-[1640px] smD:gap-x-15 container grid grid-cols-1 2xl:grid-cols-[minmax(0,1fr)_minmax(0,550px)]">
    <div class="smD:-order-1 order-1 duration-300 ease-in-out">
      {% assign img_class = img_size | append: ' h-full w-full object-cover object-center duration-300 ease-in-out' %}
      {% if image %}
        <picture>
          <source srcset="{{ image | image_url: width: 2000 }}" media="(min-width: 1150px)">
          <source srcset="{{ image_tab | image_url: width: 1150 }}" media="(min-width: 740px)">
          <source srcset="{{ image_mob | image_url: width: 740 }}" media="(max-width: 740px)">
          <img
            class="{{ img_class }}"
            src="{{ image | image_url: width: 2000 }}"
            alt="{{ image.alt | escape }}"
          >
        </picture>
      {% else %}
        {{ 'lifestyle-2' | placeholder_svg_tag: img_class }}
      {% endif %}
    </div>
    <div class="mx-auto max-w-xl space-y-3">
      {% if title != blank %}
        <h2 class="text-sc-title font-primary smD:text-4xl text-xl font-medium md:text-2xl">
          {{- title -}}
        </h2>
      {% endif %}
      {% if text != blank %}
        <div class="rte text-sc-body-primary text-sm md:text-base">{{- text -}}</div>
      {% endif %}
      {% render 'contact-form', class: 'w-full pt-2', btn_type: button_type %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Main contact",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "section_anchor_id",
      "label": "Section anchor id",
      "default": "Main contact"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "header",
      "content": "Image settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "image_tab",
      "label": "Tablet image (optional)"
    },
    {
      "type": "image_picker",
      "id": "image_mob",
      "label": "Mobile image (optional)"
    },
    {
      "type": "select",
      "id": "image_size",
      "label": "Image height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium",
      "info": "aspect ratio 3:2"
    },
    {
      "type": "header",
      "content": "Content settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Hi! How can we help?"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Section text",
      "default": "<p>We're here to assist you in any way we can. Just fill out the form below or reach out to us directly using the contact information provided.</p>"
    },
    {
      "type": "select",
      "id": "button_type",
      "label": "Section button type",
      "options": [
        {
          "value": "btn_primary_main_fill",
          "label": "main primary fill"
        },
        {
          "value": "btn_secondary_main_fill",
          "label": "main secondary fill"
        },
        {
          "value": "btn_primary_main_outline",
          "label": "main primary outline"
        },
        {
          "value": "btn_secondary_main_outline",
          "label": "main secondary outline"
        },
        {
          "value": "btn_primary_pill_fill",
          "label": "pill primary fill"
        },
        {
          "value": "btn_secondary_pill_fill",
          "label": "pill secondary fill"
        },
        {
          "value": "btn_primary_pill_outline",
          "label": "pill primary outline"
        },
        {
          "value": "btn_secondary_pill_outline",
          "label": "pill secondary outline"
        },
        {
          "value": "link_primary",
          "label": "Link primary"
        },
        {
          "value": "link_secondary",
          "label": "Link secondary"
        }
      ],
      "default": "btn_primary_pill_fill"
    },
    {
      "type": "header",
      "content": "Padding Y settings"
    },
    {
      "type": "number",
      "id": "pt_mob",
      "label": "Mobile padding top in px",
      "default": 40
    },
    {
      "type": "number",
      "id": "pb_mob",
      "label": "Mobile padding bottom in px",
      "default": 40
    },
    {
      "type": "number",
      "id": "pt_tab",
      "label": "Tablet padding top in px",
      "default": 60
    },
    {
      "type": "number",
      "id": "pb_tab",
      "label": "Tablet padding bottom in px",
      "default": 60
    },
    {
      "type": "number",
      "id": "pt_desk",
      "label": "Desktop padding top in px",
      "default": 80
    },
    {
      "type": "number",
      "id": "pb_desk",
      "label": "Desktop padding bottom in px",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "topic",
      "name": "Contact topic",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Topic label"
        }
      ]
    }
  ]
}
{% endschema %}
