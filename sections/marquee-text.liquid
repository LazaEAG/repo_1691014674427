    },
    {
      "type": "number",
      "id": "marquee_speed",
      "label": "Marquee speed (in sec)",
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "center_fit",
      "label": "Center when blocks fit",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "stop_on_hover",
      "label": "Stop animation on hover",
      "default": false
    },
    {
