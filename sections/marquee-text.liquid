      "default": 0
    },
    {
      "type": "number",
      "id": "pb_desk",
      "label": "Desktop padding bottom in px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Block text",
          "default": "Slider Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee text",
      "category": "Repeatable",
