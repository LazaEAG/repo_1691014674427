<!-- newsletter.liquid -->
{% liquid
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
  assign list_id = section.settings.list_id
  assign placeholder = section.settings.placeholder
  assign thanks_text = section.settings.thanks_text
  assign small_text = section.settings.small_text

  assign pt_mob = section.settings.pt_mob
  assign pb_mob = section.settings.pb_mob
  assign pt_tab = section.settings.pt_tab
  assign pb_tab = section.settings.pb_tab
  assign pt_desk = section.settings.pt_desk
  assign pb_desk = section.settings.pb_desk
%}

{% render 'section-paddings',
  section_id: section.id,
  pt_mob: pt_mob,
  pb_mob: pb_mob,
  pt_tab: pt_tab,
  pb_tab: pb_tab,
  pt_desk: pt_desk,
  pb_desk: pb_desk
%}

{% render 'global-sections-css-variables-setter' %}

<div
  id="newsletter"
  data-section-id="{{ section.id }}"
  class="bg-sc-bg-primary text-sc-title"
>
  <div class="container">
    <div class="2k:max-w-5xl mx-auto max-w-2xl 2xl:max-w-3xl">
      {% if subtitle != blank %}
        <div class="rte text-sc-body-primary mb-4 text-center text-base font-medium">
          {{ subtitle }}
        </div>
      {% endif %}
      {% if title != blank %}
        <h2 class="font-primary text-sc-title 2k:text-5xl mb-10 text-center text-3xl 2xl:text-4xl">
          {{ title }}
        </h2>
      {% endif %}
      <div class="mx-auto max-w-xl">
        {% render 'snippet-klaviyo-form',
          list_id: list_id,
          placeholder: placeholder,
          thanks_text: thanks_text,
          small_text: small_text,
          input_height: 60,
          type: 'newsletter'
        %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "sc-title",
      "label": "Title",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "sc-body-primary",
      "label": "Body primary",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "sc-bg-primary",
      "label": "Primary background",
      "default": "#0d1e0a"
    },
    {
      "type": "header",
      "content": "Newsletter settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Join our newsletter pack for pet parenting tips, product updates, and more."
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Section subtitle",
      "default": "<p>Stay in the know</p>"
    },
    {
      "type": "header",
      "content": "Sign up settings"
    },
    {
      "type": "text",
      "id": "list_id",
      "label": "Klaviyo list id"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input placeholder",
      "default": "Enter Email"
    },
    {
      "type": "richtext",
      "id": "thanks_text",
      "label": "Thanks text",
      "default": "<p>Thanks for subscribing!</p>"
    },
    {
      "type": "richtext",
      "id": "small_text",
      "label": "Additional small text",
      "default": "<p>Helper text goes here.</p>"
    },
    {
      "type": "header",
      "content": "Padding Y settings"
    },
    {
      "type": "number",
      "id": "pt_mob",
      "label": "Mobile padding top in px",
      "default": 60
    },
    {
      "type": "number",
      "id": "pb_mob",
      "label": "Mobile padding bottom in px",
      "default": 40
    },
    {
      "type": "number",
      "id": "pt_tab",
      "label": "Tablet padding top in px",
      "default": 0
    },
    {
      "type": "number",
      "id": "pb_tab",
      "label": "Tablet padding bottom in px",
      "default": 0
    },
    {
      "type": "number",
      "id": "pt_desk",
      "label": "Desktop padding top in px",
      "default": 0
    },
    {
      "type": "number",
      "id": "pb_desk",
      "label": "Desktop padding bottom in px",
      "default": 0
    }
  ]
}
{% endschema %}
